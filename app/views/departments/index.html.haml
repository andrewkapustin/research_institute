%h1= t('headers.departments.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('buttons.new.departments'), new_department_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Department.human_attribute_name(:name)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @departments.each do |department|
      %tr
        %td= department.name
        %td
          = link_to department, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_department_path(department), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to department, method: :delete, data: {  confirm: 'Are you sure?'  }, class: 'btn btn-danger' do
            = fa_icon :times
