%h1= t('app.employees.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.employees.new-button'), new_employee_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Employee.human_attribute_name(:last_name)
      %th= Employee.human_attribute_name(:first_name)
      %th= Employee.human_attribute_name(:patronymic)
      %th= Employee.human_attribute_name(:passport)
      %th= Employee.human_attribute_name(:itn)
      %th= Employee.human_attribute_name(:date_of_birth)
      %th= Employee.human_attribute_name(:post)
      %th= Employee.human_attribute_name(:department_id)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.last_name
        %td= employee.first_name
        %td= employee.patronymic
        %td= employee.passport
        %td= employee.itn
        %td= employee.date_of_birth
        %td= employee.post
        %td= employee.department.name
        %td
          = link_to employee, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_employee_path(employee), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to employee, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
