.forms-body-assotiation.projects{ class: "projects-#{f.object.try(:id)}" }
  .field.project-id
    = f.hidden_field :id, class: 'form-control'
  .field.project-name
    = f.label :name
    = f.text_field :name, class: 'form-control'
  = f.label :start_date
  .input-group.date.datepicker.project-start-date
    = f.text_field(:start_date, class: 'form-control',
    value: lnil(f.object.start_date) )
    %span.input-group-addon
      %span.glyphicon.glyphicon-calendar
  = f.label :start_date
  .input-group.date.datepicker.project-finish-date
    = f.text_field(:finish_date, class: 'form-control',
    value: lnil(f.object.finish_date) )
    %span.input-group-addon
      %span.glyphicon.glyphicon-calendar
  .field.project-price
    = f.label :price
    = f.number_field :price, class: 'form-control'
  .assotiation-links
    = link_to_remove_association t('buttons.delete'), f,
    class: 'btn btn-info'
    - if ( params[:action] == 'edit' && !f.object.id.nil? )
      = link_to t("buttons.destroy"), f.object, method: :delete,
      class: 'btn btn-danger', data: { confirm: t('buttons.confirm.project') },
      remote: true
