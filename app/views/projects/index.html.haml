%h1= t('app.projects.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.projects.new-button'), new_project_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Project.human_attribute_name(:name)
      %th= Project.human_attribute_name(:start_date)
      %th= Project.human_attribute_name(:finish_date)
      %th= Project.human_attribute_name(:price)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.start_date
        %td= project.finish_date
        %td= project.price
        %td
          = link_to project, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_project_path(project), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to project, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
